{
  "name": "kontent-migrations-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate with migration samples",
  "main": "index.ts",
  "scripts": {
    "migrate:all": "tsc && kontent migration run --all --environment DEV",
    "migrate": "tsc && kontent migration run --environment DEV -n",
    "lint": "tslint --project tsconfig.json --fix \"Migrations/*.ts\" && prettier --write \"Migrations/**/*.ts\"",
    "build": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix --project tsconfig.json",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "keywords": [
    "migrations",
    "kontent",
    "cli"
  ],
  "author": "Kentico",
  "license": "MIT",
  "dependencies": {
    "@kentico/kontent-cli": "0.0.1",
    "@kentico/kontent-management": "^0.2.7",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.2"
  }
}
